@page
@model LoginModel
@using Microsoft.Extensions.Localization 
@inject IStringLocalizer<App> _localizer
@using web.Resources

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xl-12 mx-auto p-0">
            <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                <div class="card-img-left d-none d-md-flex">
                </div>
                <div class="card-body p-4 p-sm-5">
                    <h6 class="card-title text-center mb-3 fw-light fs-5">Логін</h6>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h4>@_localizer["Будь ласка введіть логін та пароль."]</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <label for="floatingInputEmail">@_localizer["Логін"]</label>
                        </div>
                        <hr>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <label for="floatingPassword">@_localizer["Пароль"]</label>
                        </div>
                        <div class="d-grid mb-2">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                                     <label for="floatingInputEmail">@_localizer["Запам'ятати мене?"]</label>
                                </label>
                            </div>
                        </div>
                        <div class="d-grid mb-2">
                            <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Вхід</button>
                        </div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">@_localizer["Забув пароль?"]</a>
                        </p>
                        <hr class="my-4">
                    </form>                 

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}